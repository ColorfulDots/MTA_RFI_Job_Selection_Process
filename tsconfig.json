{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/helpers/*": [
        "helpers/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/themes/*": [
        "themes/*"
      ],
      "@/types/*": [
        "types/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "incremental": true
  },
  "include": [
    "src/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", "src/hooks/useAuth.js"],
  "exclude": [
    "node_modules/*"
  ]
}
